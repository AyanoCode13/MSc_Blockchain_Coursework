generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Property {
  id          String   @id
  name        String
  description String?
  thumbnail   String
  gallery     String[]
  price       Decimal
  owner       String
  address     String
  city        String
  country     String
  zipcode     String
  available   Boolean
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now()) @updatedAt

  @@index([name, description, price, address, city, country, zipcode, available, createdAt, updatedAt])
}
